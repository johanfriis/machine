{
  "title": "Hyper Bindings",
  "rules": [
    {
      "description": "Hyper: Scroll with Ctrl-j and Ctrl-k",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^co\\.zeit\\.hyper$"]
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["left_shift"]
            }
          ]
        },
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^co\\.zeit\\.hyper$"]
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "page_up",
              "modifiers": ["left_shift"]
            }
          ]
        }
      ]
    }
  ]
}
