{
  "title": "Caps Lock Keyboard",
  "rules": [
    {
      "description": "CLK: Hyper/Escape",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_control"],
              "lazy": true
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_control"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option"
          },
          "to": [
            {
              "key_code": "right_command",
              "lazy": true
            }
          ]
        }
      ]
    },
    {
      "description": "CLK App Specific: Hyper",
      "manipulators": [
        {
          "type": "basic",
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["^co\\.zeit\\.hyper$"]
            }
          ],
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_command", "right_control", "right_shift"]
            }
          },
          "to": [
            {
              "key_code": "page_down",
              "modifiers": ["left_shift"]
            }
          ]
        },
        {
          "type": "basic",
